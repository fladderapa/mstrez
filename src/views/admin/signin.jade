doctype 5
html
  head
    meta(charset="utf-8")
    title= title
    link(rel='stylesheet', href='/css/admin.css')

    body
    .container
      .hero
        h4 Admin login
        form(action="/admin/login", method="POST")
          .form-group
            label(for='inp-usr') Användarnamn
            input#inp-usr.form-control(type='text', name="username", placeholder='Ditt användarnamn')

          .form-group
            label(for='inp-pass') Lösenord
            input#inp-pass.form-control(type='password', name="password", placeholder='Ditt lösenord')

          input.btn.btn-large.btn-info(type="submit", value="Logga in")